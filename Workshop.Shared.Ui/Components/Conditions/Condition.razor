@if (Check)
{
  @If
}
else
{
  @Else
}

@code {

  [Parameter]
  public RenderFragment? If { get; set; }

  [Parameter]
  public RenderFragment? Else { get; set; }

  [Parameter, EditorRequired]
  public bool Check { get; set; }

  protected override void OnInitialized()
  {
    if (If is null && Else is null)
    {
      throw new InvalidOperationException("Either 'If' or 'Else' content must be provided.");
    }
  }

}
