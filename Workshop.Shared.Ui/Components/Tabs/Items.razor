<CascadingValue Value="this">
  @ChildContent
</CascadingValue>

@code {

  [Parameter]
  public RenderFragment? ChildContent { get; set; }

  [CascadingParameter]
  public Tabs? Parent { get; set; }

  protected override void OnInitialized()
  {
    Parent?.ClearTabs();
  }

  public void AddTab(string name, RenderFragment tab) => Parent?.AddTab(name, tab);

}
